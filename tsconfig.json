{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["*", "*.web", "*.native"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "./src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts"
  ]
}
